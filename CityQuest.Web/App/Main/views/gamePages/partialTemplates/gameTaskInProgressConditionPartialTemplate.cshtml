        </div>
    </div>
    <div class="row game-page-game-task-in-progress-condition-type-time-body"
         ng-if="!condition.isShortViewMode">
        <div class="col-xs-12">
            <div class="row game-page-game-task-in-progress-condition-type-time-body-text">
                {{condition.description}}
            </div>
            <div class="row row-centered game-page-game-task-in-progress-condition-type-time-body-button">
                <div class="col-xs-12 col-centered">
                    <button type="button"
                            class="btn btn-success pull-right"
                            style="width: 120px;"
                            ng-disabled="gameTask.isCompleted || condition.lockedForPass"
