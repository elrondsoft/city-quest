<div class="row game-collection-template-container">
    <div class="col-xs-12">
        <div class="row game-collection-template-container-header">
            <div class="col-xs-12">
                <div class="row key-activator-container">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-12">
                                <button class="btn btn-success"
                                        title="{{vm.localize('ActivateKeyButtonTitleText')}}"
                                        ng-click="vm.keyActivatorService.openActivateKeyArea()">
                                    <i class="fa fa-key fa-lg"></i>&nbsp;&nbsp;{{vm.localize('ActivateKeyButtonText')}}
                                </button>
                            </div>
                        </div>
                        <div class="row key-activation-area"
                             ng-if="vm.keyActivationAreaIsOpened">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-10">
                                <div class="row">
                                    <div class="col-xs-9">
                                        <input class="form-control cq-control"
                                               style="min-width: 300px;"
                                               type="text"
                                               title="{{vm.localize('ActivateKeyInputTitleText')}}"
                                               placeholder="{{vm.localize('ActivateKeyInputPlaceholder')}}"
                                               ng-model="vm.keyActivatorService.keyValue" />

                                    </div>
                                    <div class="col-xs-3">
                                        <button type="button"
                                                style="min-width: 50px;"
                                                class="btn btn-success"
                                                title="{{vm.localize('SubmitActivateKeyButtonTitleText')}}"
                                                ng-if="vm.keyActivatorService.canActivateKey()"
                                                ng-click="vm.keyActivatorService.activateKey()">
                                            {{vm.localize('SubmitActivateKeyButtonText')}}
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-1"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row game-collection-template-container-body">
            <div class="col-xs-12">
                <div class="row filters-container">
                    <div class="col-xs-12">

                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-hover">
                            @*<thead>
                                    <tr>
                                        <th style="width:40%">gamePicturePartialTemplate</th>
                                        <th style="width:40%">gameDescriptionPartialTemplate</th>
                                        <th style="width:20%">gameStatusPartialTemplate</th>
                                    </tr>
                                </thead>*@
                            <tbody>
                                <tr data-ng-repeat="game in vm.gameCollection"
                                    ng-click="vm.actions.openGamePage(game)">
                                    <td style="width:40%"><ng-include src="vm.partialTemplates.gamePicturePartialTemplate" /></td>
                                    <td style="width:40%"><ng-include src="vm.partialTemplates.gameDescriptionPartialTemplate" /></td>
                                    <td style="width:20%"><ng-include src="vm.partialTemplates.gameStatusPartialTemplate" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row game-collection-template-container-footer">
            <div class="col-xs-12">
            </div>
        </div>
    </div>
</div>